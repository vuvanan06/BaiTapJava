
public class TAMGIAC extends DIEM {
	private DIEM A,B,C;
	public TAMGIAC() {
		A = new DIEM();
		B = new DIEM();
		C = new DIEM();
		
	}
	public void NHAPTG() {
		System.out.println("Nhap toa do diem A: ");
		A.NHAPDIEM();
		System.out.println("Nhap toa do diem B: ");
		B.NHAPDIEM();
		System.out.println("Nhap toa do diem C: ");
		C.NHAPDIEM();		
	}
	void Kiemtra() {
		if(AB+AC>BC&&AB+BC>AC&&AC+BC>AB)
			System.out.println("Day la tam giac");
	}else {
		System.out.println("day khong phai la tam giac");
	}
	void ChuVi() {
		ChuVi = AB + BC + AC;
		System.out.println("Chu vi la: "+ChuVi);

	}
	void DienTich() {
	float AB,AC,BC,p,s;
	p=Chuvi/2.0f;
	s=Math.sqrt(p*(p-AB)*(p-AC)*(p-BC));
	System.out.println("Dien tich la: " +s);
    }

}
